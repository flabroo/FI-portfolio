    <div class="show-title d-flex justify-content-between align-items-center mt -5 flex-column flex-lg-row">
      <h1 class="my-2 text-center text-lg-start"><%= @project.name %></h1>
      <% if @project.url %>
        <%= link_to "View Site", @project.url, target: :_blank, class: "btn btn-primary link-btn" %>
      <% else %>
        <span class="btn btn-secondary my-2">Website Unavailable</span>
      <% end %>
    </div>
    <ul class="m-0 my-2 p-0 mb-5 justify-content-center justify-content-lg-start">
      <% @project.languages.each do |l| %>
        <li><%= l.name %></li>
      <% end %>
    </ul>
    <%= @project.summary.html_safe %>

    <h4>Type</h4>
    <%= @project.kind.html_safe %>

    <h4>Project Purpose and Goal</h4>
    <%= @project.purpose.html_safe %>

    <h4>Web Stack and Explanation</h4>
    <%= @project.explanation.html_safe %>

    <h4>Problems and Thought Process</h4>
    <%= @project.problems.html_safe %>
  </div>

  <div id="carouselExample" class="carousel slide m-auto bg-dark">
    <div class="carousel-inner">
      <% @images_path.each_with_index do |path, index| %>
        <% if index == 0 %>
          <div class="carousel-item active">
            <%= image_tag path, class: "d-block w-100" %>
          </div>
        <% else %>
          <div class="carousel-item">
            <%= image_tag path, class: "d-block w-100" %>
          </div>
        <% end %>
      <% end %>
    </div>
    <button class="carousel-control-prev" type="button" data-bs-target="#carouselExample" data-bs-slide="prev">
      <span class="carousel-control-prev-icon dark" aria-hidden="true"></span>
      <span class="visually-hidden">Previous</span>
    </button>
    <button class="carousel-control-next" type="button" data-bs-target="#carouselExample" data-bs-slide="next">
      <span class="carousel-control-next-icon" aria-hidden="true"></span>
      <span class="visually-hidden">Next</span>
    </button>
  </div>

